{
  "post-scaffold":{
    "set-folder-perms":{
      "command":"chmod -R 0777 src/runtime",
      "platforms":"unix"
    },
    "set-cli-perms":{
      "command":"chmod +x bin/cli",
      "platforms":"unix"
    },
    "copy-local-config":{
      "command":"cp src/app/config/config.php src/app/config/config.local.php",
      "platforms":"unix"
    },
    "copy-local-config-windows":{
      "command":"copy \"src\\app\\config\\config.php\" \"src\\app\\config\\config.local.php\"",
      "platforms":"windows"
    },
    "composer-install": {
      "description": "Install all packages from composer",
      "command": "composer install",
      "skippable": true
    },
    "fill-package": {
      "skippable": true,
      "description": "Fills the project name, version",
      "command": "php bin/cli Configure package ${package_name} ${package_version}",
      "Form":{
        "validate": {
          "package_name": "required"
        },
        "name": "project_values",
        "message": "Please provide the following information:",
        "choices": [
          { "name": "package_name", "message": "Package Name", "initial": "kws3-api" },
          { "name": "package_version", "message": "Package Version", "initial": "0.0.1" }
        ]
      }
    },
    "fill-database-config": {
      "skippable": true,
      "description": "Fills the database connection configuration ",
      "command": "php bin/cli Configure db host=${host} username=${username} password=${password} dbname=${dbname}",
      "Form":{
        "validate": {
          "host": "required",
          "username": "required",
          "dbname": "required"
        },
        "name": "project_values",
        "message": "Please provide the following information:",
        "choices": [
          { "name": "host", "message": "Host Name", "initial": "localhost" },
          { "name": "username", "message": "Username", "initial": "root" },
          { "name": "password", "message": "Password", "initial": "" },
          { "name": "dbname", "message": "Database Name", "initial": "dev_db" }
        ]
      }
    }
  },
  "scripts":{
    "run-tests":{
      "name": "Run test files",
      "command": "php bin/cli TestCore start ${filename}",
      "Input":{
        "name": "filename",
        "message": "What is the test file name? (specify folder with a :, leave empty to run all)",
        "initial": ""
      }
    }
  }
}